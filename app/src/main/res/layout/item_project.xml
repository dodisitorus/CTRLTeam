<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/loginCard"
    app:cardCornerRadius="10sp"
    android:elevation="8dp"
    android:id="@+id/item_card_view"
    android:layout_marginRight="10sp"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="3sp"
    android:layout_marginBottom="5sp"
    android:background="@color/whiteCardColor">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/item_layout_view"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp">

        <android.support.v7.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="12dp"
            android:id="@+id/card_view_image"
            app:cardCornerRadius="35dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">

            <ImageView
                android:layout_height="70dp"
                android:layout_width="match_parent"
                android:id="@+id/imageViewProfile"
                android:layout_alignParentTop="true"
                android:background="@drawable/profile_bk"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo">
            </ImageView>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/card_view_image"
            android:layout_below="@+id/status"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:textColor="@color/profilePrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/deskipsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:maxLines="8"
            android:text="@string/app_desc"
            android:layout_below="@id/title" />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_below="@+id/deskipsi"
            android:layout_alignStart="@+id/deskipsi"
            android:orientation="horizontal"
            android:id="@+id/list_avatar_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/card_avatar1"
                android:layout_margin="1dp"
                android:visibility="gone"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/avatar1"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/profile_ak"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo">
                </ImageView>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_margin="1dp"
                android:id="@+id/card_avatar2"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/avatar2"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/profile_ak"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo">
                </ImageView>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:id="@+id/card_avatar3"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/avatar3"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/profile_ak"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo">
                </ImageView>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:id="@+id/card_avatar4"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/avatar4"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/profile_ak"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo">
                </ImageView>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="1dp"
                android:visibility="gone"
                android:id="@+id/card_avatar5"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/avatar5"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/profile_ak"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo">
                </ImageView>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/count_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginBottom="5dp"
            android:layout_alignStart="@id/list_avatar_member"
            android:layout_below="@id/list_avatar_member"
            android:text="@string/_1_member"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count_member"
            android:layout_alignParentEnd="true"
            android:textColor="@color/profilePrimaryDark"
            android:text="@string/project" />

    </RelativeLayout>

</android.support.v7.widget.CardView>